#include<iostream>
using namespace std;

int main()
{
    int n;
    cin>>n;
    
    int i = 0;
    int sum = 0;
    
    while(i<=n)
    {
        if(n%2==0)
        {
        sum = sum+i;
        i=i+1;
        }
        
        else
        {
            return 0;
        }
    }
    
    cout<<"The value is"<<sum<<endl;
}
